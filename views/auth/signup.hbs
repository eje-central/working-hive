
<body id="principal">
  <div>
    <div class="labelContainer">
      <form id="form-container" action="/signup" method="post">
      <label for="username" class="mainLabel">Correo</label>
      <br>
      <input type="text" name="username" id="username">
      <br>
    </div>
    <div class="labelContainer">
      <label for="name" class="mainLabel">Nombre</label>
      <br>
      <input type="text" name="name" id="name">
      <br>
    </div>
    <div class="labelContainer">
      <label for="password" class="mainLabel">Contraseña</label>
      <br>
      <input type="password" name="password" id="password">
      <br>
    </div>

  {{#if message}}
  <div class="error-message">
    {{message}}
  </div>
  {{/if}}
  <br>
  <div class="main">
  <button type="submit" name="button" class="button">Registra tu usuario</button>
  </div>
  <p class="account-message">
    ¿Ya cuentas con usuario? <a href="/login"><br> Inicia sesión</a>
  </p>
</div>

</body>
</form>
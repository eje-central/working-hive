    <div class="tile is-child box has-background-dark">
      <p class="title has-text-white">Estad√≠sticas por etapas</p>
        {{#each uniqueRes}}
          <div class="box has-background-warning">
            <div class="columns">
              <div class="column">
                <span class="subtitle">{{this.nom}}</span>

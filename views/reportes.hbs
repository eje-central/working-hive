 </div>


  <script>
    window.onload = function () {
  var ctx = document.getElementById("myChart");
  var names = []
  var ctx2 = document.getElementById("myChart2");

  {{#each proyectos}}
    names.push("{{this}}")
  {{/each}}

  function random_rgba() {
      var o = Math.round, r = Math.random, s = 255;
      return 'rgba(' + o(r()*s) + ',' + o(r()*s) + ',' + o(r()*s) + ',' + r().toFixed(1) + ')';
  }

  var color = [];
  var border = [];

  for (c = 1; c < {{proyectos.length}} + 1; c++) {
    let rgb = random_rgba();
    color.push(rgb);
    border.push('rgba(0,0,0)')
  }

  var color2 = random_rgba();

  var myChart2 = new Chart(ctx2, {
    type: 'bar',
    data: {
        labels: ['En tiempo','Atrasados','Adelantados'],
        datasets: [{
            label: '',
            data: [{{enTiempo}}, {{atrasados}}, {{adelantados}}],
            backgroundColor: [ 'rgb(0, 167, 228)','rgb(255, 0, 0)','rgb(0, 182, 109)'],
            borderColor: border,
        }]
    },
    options: Chart.defaults.bar
});

  var myChart = new Chart(ctx, {
      type: 'doughnut',
      data: {
          labels: names,
          datasets: [{
              label: 'Ingresos',
              data: [{{datos}}],
              backgroundColor: color,
              borderColor: border,
          }]
      },
      options: Chart.defaults.doughnut
  });
    }
  </script>


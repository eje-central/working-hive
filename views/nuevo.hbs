  <form action="/nuevo" method="POST">
  <div class="box has-background-white-ter">
    <div class="field">
      <label class="label">Nombre del proyecto</label>
      <div class="control has-icons-right">
        <input class="input is-success" type="text" placeholder="Ingresa un nombre creativo" name="nombre">
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
      <p class="help is-success">El nombre del proyecto está disponible</p>
    </div>

    <div class="field">
      <label class="label">Descripción del proyecto</label>
      <div class="control">
        <textarea class="textarea" name="descripcion" placeholder="Describe el proyecto a tus colaboradores de una manera clara"></textarea>
      </div>
    </div>

    <div class="field">
      <label class="label">Cotización</label>
      <div class="control">
        <input class="input" name="dineros" type="number" placeholder="Cantidad que ingresa por el proyecto">
      </div>
    </div>

    <div class="field">
      <label class="label">Fecha de inicio</label>
      <div class="control">
        <input class="input" name="fechaInicio" type="date" placeholder="">
      </div>
    </div>

  <div class="field">
  <label class="label">Fecha de entrega</label>
  <div class="control">
    <input class="input" name="fechaFin" type="date" placeholder="">
  </div>
</div>

  

<body class="inside">
  <br>
  <div class="box">
    <div class="field">
      <label class="label">Nombre del proyecto</label>
      <div class="control has-icons-right">
        <input class="input is-success" type="text" placeholder="Ingresa un nombre creativo" value="Working Hive">
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
      <p class="help is-success">El nombre del proyecto está disponible</p>
    </div>

    <div class="field">
      <label class="label">Descripción del proyecto</label>
      <div class="control">
        <textarea class="textarea" placeholder="Describe el proyecto a tus colaboradores de una manera clara"></textarea>
      </div>
    </div>

    <div class="field">
      <label class="label">Cotización</label>
      <div class="control">
        <input class="input" type="number" placeholder="Cantidad que ingresa por el proyecto">
      </div>
    </div>

    <div class="field">
      <label class="label">Fecha de inicio</label>
      <div class="control">
        <input class="input" type="date" placeholder="">
      </div>
    </div>

  <div class="field">
  <label class="label">Fecha de entrega</label>
  <div class="control">
    <input class="input" type="date" placeholder="">
  </div>
</div>

  <div class="field">
    <label class="label">Nombre de la etapa</label>
    <div class="control">
      <input class="input" type="text" placeholder="Etapa" value="Producción">
    </div>
  </div>

  <div class="columns">
    <div class="column is-half">
      <label class="label">Etapas</label>
       <input class="input" type="text" placeholder="">
        <div class="control">
          <br>
          <button class="button is-small is-dark">Agregar</button>
        </div>
    </div>
    <div class="column is-half">
      <div class="tags are-large is-centered">
        <span class="tag is-warning">Diseño</span>
      </div>
    </div>
  </div>


<div class="field is-grouped">
  <div class="control">
    <button class="button is-link">Finalizar</button>
  </div>
  <div class="control">
    <button class="button is-text">Cancelar</button>
  </div>
</div>
</div>
</body>